{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Iniciar Api <Play> (web)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/A3.Mercado.API/bin/Debug/net8.0/A3.Mercado.API.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/A3.Mercado.API",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s/api-docs/index.html"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach",
    },
    {
      "name": "Docker .NET Core Attach",
      "type": "docker",
      "request": "attach",
      "platform": "netCore",
      "sourceFileMap": {
        "/src": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Docker Iniciar Api <Play> (web)",
      "type": "docker",
      "request": "launch",
      "preLaunchTask": "docker-run: debug",
      "netCore": {
        "appProject": "${workspaceFolder}/src/A3.Mercado.API/A3.Mercado.API.csproj"
      }
    },
    {
      "name": ".NET Core Docker Attach",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickRemoteProcess}",
      "pipeTransport": {
        "pipeCwd": "${workspaceRoot}",
        "pipeProgram": "docker",
        "pipeArgs": [
          "exec",
          "-i",
          "SERVICE_API"
        ],
        "debuggerPath": "/root/vsdbg/vsdbg",
        "quoteArgs": false
      },
      "sourceFileMap": {
        "path/in/container": "${workspaceRoot}/local/path"
      }
    }
  ]
}